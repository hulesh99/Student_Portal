<!-- include header -->
<%- include('include/_header') %>
    <!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/all-user"><i class="fas fa-angle-double-left"></i> All Students</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update User</h2>
            </div>

            <!-- add user form -->
            <!-- form handling -->
            <form method="POST" id="update_user">
                <div class="new_user">
                    <div class="form-group">
                        <label for="name" class="text-color">Name</label>
                        <input type="hidden" name="id" value="<%= user._id %>">
                        <input type="text" name="name" value="<%= user.name %>" placeholder="Enter here" required>
                    </div>
                    <div class="form-group">
                        <label for="name" class="text-color">Father Name</label>
                        <input type="hidden" name="id" value="<%= user._id %>">
                        <input type="text" name="name" value="<%= user.fname %>" placeholder="Enter here" required>
                    </div>
                    <div class="form-group">
                        <label for="name" class="text-color">Mother Name</label>
                        <input type="text" name="name" value="<%= user.mname %>" placeholder="Enter here" required>
                    </div>

                    <div class="form-group">
                        <label for="Roll" class="text-color">Roll No</label>
                        <input type="text" name="roll" value="<%= user.roll%>" placeholder="Enter here" required>
                    </div>
                    <div class="form-group">
                        <label for="Enroll" class="text-color">Enroll No</label>
                        <input type="text" name="enroll" value="<%= user.enroll%>" placeholder="Enter here" required>
                    </div>
                    <div class="form-group">
                        <label for="Email" class="text-color">Email</label>
                        <input type="email" name="email" value="<%= user.email%>" placeholder="example@gmail.com"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="Mobile" class="text-color">Phone No</label>
                        <input type="number" name="mobile" value="<%= user.mobile%>" placeholder="Enter here" required>
                    </div>
                    <div class="form-group">
                        <label for="DOB" class="text-color">Date Of Birth</label>
                        <input type="date" name="dob" value="<%= user.dob%>" placeholder="Enter here" required>
                    </div>
                    <div class="form-group">
                        <label for="Course" class="text-color"> Course</label>
                        <select name="course" class="courses">
                            <option><%= user.course %></option>
                            <option>Bsc-cs</option>
                            <option>Bca</option>
                            <option>B-Tech</option>
                            <option>M-Tech</option>
                            <option>Mca</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="Category" class="text-color">Category</label>
                        <select name="category" class="category">
                            <option><%= user.category %></option>
                            <option>Regular</option>
                            <option>Private</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="Address" class="text-color">Address</label>
                        <input type="text" name="address" value="<%= user.address %>" placeholder="Enter here" required>
                    </div>
                    <div class="form-group">
                        <label for="gender" class="text-color">Gender</label>
                        <div class="radio inline">
                            <input type="radio" id="radio-2" name="gender" value="Male" <%=user.gender=='Male'
                                ? 'checked' : '' %>>
                            <label for="radio-2" class="radio-label">Male</label>
                        </div>
                        <div class="radio inline">
                            <input type="radio" id="radio-3" name="gender" value="Female" <%=user.gender=='Female'
                                ? 'checked' : '' %> >
                            <label for="radio-3" class="radio-label">Female</label>
                        </div>
                    </div>

                    <!-- <div class="form-group">
                        <label for="Mobile" class="text-color">Complaint Details</label>
                        <input type="text" name="address" value="<%= user.complaint %>" placeholder="Enter here" required>
                    </div>
                    <div class="form-group">
                        <label for="Mobile" class="text-color">Desire Outcome</label>
                        <input type="text" name="address" value="<%= user.outcome %>" placeholder="Enter here" required>
                    </div> -->

                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>

                </div>
            </form>

        </div>
    </main>
    <!-- /Main Site -->

    <!-- include footer -->
    <%- include('include/_footer') %>
        <!-- /include footer -->