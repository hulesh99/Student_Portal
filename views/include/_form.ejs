 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-color">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Enter here" required>
        </div>
        <div class="form-group">
            <label for="fname" class="text-color">Father Name</label>
            <input type="text" name="fname" value="" placeholder="Enter here" required>
        </div>
        <div class="form-group">
            <label for="mname" class="text-color">Mother Name</label>
            <input type="text" name="mname" value="" placeholder="Enter here" required>
        </div>
        <div class="form-group">
            <label for="Roll" class="text-color">Roll No</label>
            <input type="text" name="roll" value="" placeholder="Enter here" required>
        </div>
        <div class="form-group">
            <label for="Enroll" class="text-color">Enroll No</label>
            <input type="text" name="enroll" value="" placeholder="Enter here" required>
        </div>
        <div class="form-group">
            <label for="Email" class="text-color">Email</label>
            <input type="email" name="email" value="" placeholder="Enter here" required>
        </div>
        <div class="form-group">
            <label for="Mobile" class="text-color">Phone No</label>
            <input type="number" name="mobile" value="" placeholder="Enter here" required>
        </div>
        <div class="form-group">
            <label for="DOB" class="text-color">Date Of Birth</label>
            <input type="date" name="dob" value="" placeholder="Enter here" required>
        </div>
        <div class="form-group">
            <label for="Course" class="text-color"> Course</label>
            <select name="course" class="courses">
                <option>Bsc-cs</option>
                <option>Bca</option>
                <option>B-Tech</option>
                <option>M-Tech</option>
                <option>Mca</option>
            </select>
        </div>

        <div class="form-group">
            <label for="Category" class="text-color">Category</label>
            <select name="category" class="category"data-placeholder="Select box" >
                <option>Regular</option>
                <option>Private</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Address" class="text-color">Address</label>
            <textarea name="address" cols="50" rows="2"></textarea>
        </div>
        <div class="form-group">
            <label for="gender" class="text-color">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male"  checked>
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female" >
                <label for="radio-3" class="radio-label">Female</label>
            </div>
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>